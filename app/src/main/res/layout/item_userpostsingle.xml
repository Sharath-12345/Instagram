<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/postuploaderdp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/postuploadername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Post Uploader Name"
        app:layout_constraintStart_toEndOf="@+id/postuploaderdp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="17sp"/>
    <ImageView

        android:id="@+id/postphoto"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@+id/postuploaderdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:textSize="17sp"
        android:id="@+id/postcaption"
        app:layout_constraintTop_toBottomOf="@+id/postphoto"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="25dp"
         android:layout_marginLeft="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>