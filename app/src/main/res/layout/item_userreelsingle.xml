<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/postuploaderdpreel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/postuploadernamereel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Post Uploader Name"
        app:layout_constraintStart_toEndOf="@+id/postuploaderdpreel"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="17sp"/>
    <ImageView

        android:layout_marginTop="20dp"
        android:id="@+id/postphotoreel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@+id/postuploaderdpreel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <VideoView
        android:layout_marginTop="20dp"
        android:id="@+id/postvideoreel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@+id/postuploaderdpreel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption"
        android:textSize="17sp"
        android:id="@+id/postcaptionreel"
        app:layout_constraintTop_toBottomOf="@+id/postphotoreel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>